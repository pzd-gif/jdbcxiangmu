<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
    <servlet><!--servlet类路径配置-->
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>com.pzd.servlet.StudentServlet</servlet-class>
    </servlet>
    <servlet><!--servlet类路径配置-->
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>com.pzd.servlet.AddServlet</servlet-class>
    </servlet>
    <servlet><!--servlet类路径配置-->
        <servlet-name>DelServlet</servlet-name>
        <servlet-class>com.pzd.servlet.DelServlet</servlet-class>
    </servlet>
    <servlet><!--servlet类路径配置-->
        <servlet-name>FindOneServlet</servlet-name>
        <servlet-class>com.pzd.servlet.FindByIdServlet</servlet-class>
    </servlet>
    <servlet><!--servlet类路径配置-->
            <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>com.pzd.servlet.UpdateServlet</servlet-class>
    </servlet>

    <servlet-mapping><!--servlet类映射配置-->
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/StudentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping><!--servlet类映射配置-->
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/AddServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping><!--servlet类映射配置-->
        <servlet-name>DelServlet</servlet-name>
        <url-pattern>/DelServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping><!--servlet类映射配置-->
        <servlet-name>FindOneServlet</servlet-name>
        <url-pattern>/FindOneServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping><!--servlet类映射配置-->
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/UpdateServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list><!--默认首页地址-->
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>list.jsp</welcome-file>
    </welcome-file-list>

</web-app>